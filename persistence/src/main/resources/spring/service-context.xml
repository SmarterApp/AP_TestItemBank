<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
    xmlns:int="http://www.springframework.org/schema/integration" 
    xmlns:int-groovy="http://www.springframework.org/schema/integration/groovy"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context" 
    xsi:schemaLocation="
                http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
                
    <bean id="importSetService" class="org.opentestsystem.authoring.testitembank.service.impl.ImportSetServiceImpl" />
    <bean id="exportSetService" class="org.opentestsystem.authoring.testitembank.service.impl.ExportSetServiceImpl" />
    <bean id="itemService" class="org.opentestsystem.authoring.testitembank.service.impl.ItemServiceImpl" />
    <bean id="itemHistoryService" class="org.opentestsystem.authoring.testitembank.service.impl.ItemHistoryServiceImpl" />
    <bean id="sftpFileTransferService" class="org.opentestsystem.authoring.testitembank.service.impl.SftpFileTransferServiceImpl" />
    <bean id="apipZipInputFileExtractorService" class="org.opentestsystem.authoring.testitembank.service.impl.ApipZipInputFileExtractorService" />
    <bean id="apipZipOutputFileBuilderService" class="org.opentestsystem.authoring.testitembank.service.impl.ApipZipOutputFileBuilderService" />
    <bean id="zipXMLService" class="org.opentestsystem.authoring.testitembank.service.impl.ZipXMLServiceImpl" />
    <bean id="itemMetadataService" class="org.opentestsystem.authoring.testitembank.service.impl.ItemMetadataServiceImpl" />

    <bean id="sftpSessionFactory" class="org.springframework.integration.sftp.session.DefaultSftpSessionFactory">
        <property name="host" value="${tib.sftp.hostname}" />
        <property name="port" value="${tib.sftp.port}" />
        <property name="user" value="${tib.sftp.user}" />
        <property name="password" value="${tib.sftp.password}" />
    </bean>

</beans>
